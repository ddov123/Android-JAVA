<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CommFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="커뮤니티"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textSize="23dp"
                android:gravity="left|center"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:src="@drawable/comm_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/btn_awards"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FFFF96"
                android:text="2021 **** 어워즈"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left|top"
                android:padding="25dp"
                android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="간병백과"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#B4B4DC"
                            android:layout_margin="5dp"/>

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="간병 사고\nX파일"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#FFE3EE"
                            android:layout_margin="5dp"/>

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="건강 정보"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#82F9B7"
                            android:layout_margin="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="간병\n이야기"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#FFE4B5"
                            android:layout_margin="5dp"/>

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="****\n뉴스"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#FAFAB4"
                            android:layout_margin="5dp"/>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="간병동향\n리포트"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="left|top"
                            android:padding="25dp"
                            android:background="@drawable/btn_radius"
                            android:backgroundTint="#C8FFFF"
                            android:layout_margin="5dp"/>
                    </LinearLayout>

                </LinearLayout>




        </LinearLayout>

    </LinearLayout>
</FrameLayout>